cmake_minimum_required(VERSION 3.7)
project(Engineer)
set(CMAKE_CXX_STANDARD 17)
file(GLOB DICT ./*.cpp ./*/*.cpp ./*/*/*.cpp ./*/*/*/*.cpp )
add_compile_options(-g3)
include_directories(${PROJECT_SOURCE_DIR}/com/include)
include_directories(${PROJECT_SOURCE_DIR}/data/include)
include_directories(${PROJECT_SOURCE_DIR}/detect/include)
include_directories(${PROJECT_SOURCE_DIR}/calculate/include)
include_directories(${PROJECT_SOURCE_DIR}/com/include/serial)
include_directories(${PROJECT_SOURCE_DIR}/sensor/include)
include_directories(${PROJECT_SOURCE_DIR}/utils/umt/include)
find_package(OpenCV REQUIRED)
link_directories(${OpenCV_LIBRARY_DIRS})
add_executable(Engineer ${DICT})
target_link_libraries(Engineer ${OpenCV_LIBS} -lpthread)
